<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="minimal_layout_inherit" inherit_id="report.minimal_layout">
        <xpath expr="//head" position="inside">
            <link rel='stylesheet' href="/sp_product_pricetag/static/src/css/sp_pricetag.css"/>
        </xpath>
    </template>
    <template id="report_pricetag">
        <t t-call="report.html_container">
            <div class="page">
                <t t-foreach="Products" t-as="product">
                    <t t-foreach="product['line'].quantity" t-as="q">
                        <div class="label_container label_border">
                            <div class="pricetag">
                                <div class="label_top">
                                    <div class="product_name">
                                        <div class="product_name_text"><t t-esc="product['product'].name"/></div>
                                    </div>
                                </div>
                                <div class="label_left">
                                    <div class="product_informations">
                                        <t t-if="product['product'].volume != 0.0">
                                            <span>Soit </span>
                                            <span t-esc="product['product'].lst_price/product['product'].volume" t-esc-options='{"widget": "monetary", "display_currency": "product[\"product\"].company_id.currency_id"}' />
                                            <span> /l</span>
                                        </t>
                                        <t t-if="product['product'].weight != 0.0">
                                            <span>Soit </span>
                                            <span t-esc="product['product'].lst_price/product['product'].weight" t-esc-options='{"widget": "monetary", "display_currency": "product[\"product\"].company_id.currency_id"}' />
                                            <span> /kg</span>
                                        </t>
                                    </div>
                                </div>
                                <div class="label_right">
                                    <div class="product_price">
                                        <t t-esc="'%0.2f' % (product['product'].list_price)" />â‚¬
                                    </div>
                                </div>
                                <div class="label_bottom">
                                    <div class="product_informations product_barcode">
                                        <img t-if="product['product'].barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product['product'].barcode, 600, 600)" class='barcode_image' />
                                        <span t-field="product['product'].barcode" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </div>
        </t>
    </template>
</odoo>